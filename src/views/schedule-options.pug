extends layout
block header
	link(rel="stylesheet", href="/styles/schedule.css")
	script(src="/scripts/schedule.js")
	script(src="/scripts/modernizr.js")
block content
	div(id="course1")
		h2 Select which time
		label(class="radio-inline")
			input(type="radio" name="course1" value="monday-11:10-12:30")
			| Monday 11:10 - 12:30
		label(class="radio-inline")
			input(type="radio" name="course1" value="tuesday-8:10-9:40")
			| Tuesday 8:10 - 9:40
		label(class="radio-inline")
			input(type="radio" name="course1" value="friday-9:40-11:00")
			| Friday 9:40 - 11:00
		hidden(id="course1-prev", name="course1-prev")


	div(class="cd-schedule")
		div(class="timeline")
			ul
				li
