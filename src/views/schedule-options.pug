					span 17:00
				li
					span 17:30
				li
					span 18:00
				li
					span 18:30
				li
					span 19:00
				li
					span 19:30
				li
					span 20:00
				li
					span 20:30
				li
					span 21:00

		div(class="events")
			ul
				li(class="events-group")
					div(class="top-info")
						span Monday
					ul(id="monday")
				li(class="events-group")
					div(class="top-info")
						span Tuesday
					ul(id="tuesday")
				li(class="events-group")
					div(class="top-info")
